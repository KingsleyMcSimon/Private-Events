<h1>Create an event</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@event) do |f| %>
      <%= f.label :name %>
      <%=f.text_field :name%>
      <%= f.label :location %>
      <%=f.text_field :location%>
      <%= f.label :date %>
      <%= f.label :description %>
      <%= f.text_field :description %>
      <%= f.submit "Create Event", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>