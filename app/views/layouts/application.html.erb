<!DOCTYPE html>
<html>
<head>
  <title>Private Events</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
  <% flash.each do |msg|%>
    <div>
      <%= msg%>
    </div>
  <%end%>

  <div class="container">
    <%= render  "nav/nav" %>
    <nav class="navbar navbar-expand-lg navbar-dark bg-danger">
      <%= link_to 'Private Events', root_path, class: 'navbar-brand' %>
      <button class="navbar-toggler"  type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon">sdasd</span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item">
            <%= link_to 'Events', events_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to 'Users', users_path, class: "nav-link" %>
          </li>
        </ul>
        <ul class="navbar-nav ml-auto">
        <% if @current_user %>
            <span class = "align-middle text-white mr-2 mb-2 mt-1">Hello, <%= @current_user.name %>!</span>
            <li class="nav-item">
              <%= link_to 'Logout', logout_user_path(@current_user), method: :delete, class: "btn btn-warning" %>
            </li>
          <% else %>
            <li>
              <%= link_to 'Log in', login_path, class: "btn btn-info mt-2 mt-lg-0" %>
            </li>
            <li class="nav-item">
              <%= link_to 'Sign up', signup_path, class: "btn btn-info mt-2 mt-lg-0" %>
            </li>
          <% end %>
        </ul>
      </div>
    </nav>
  </div>

  <%= yield %>
</body>
</html>
